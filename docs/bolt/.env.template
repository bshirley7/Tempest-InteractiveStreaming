# TEMPTEST Environment Variables Template
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-key-here
CLERK_SECRET_KEY=sk_test_your-secret-here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/
CLERK_ADMIN_USER_ID=user_your-admin-id-here
CLERK_WEBHOOK_SECRET=whsec_your-webhook-secret

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-account-id-here
CLOUDFLARE_API_TOKEN=your-api-token-here

# Cloudflare R2 Storage
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-key
CLOUDFLARE_R2_BUCKET_NAME=temptest-media
CLOUDFLARE_R2_PUBLIC_URL=https://your-bucket.r2.dev
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Cloudflare Stream
CLOUDFLARE_STREAM_CUSTOMER_SUBDOMAIN=customer-your-subdomain
NEXT_PUBLIC_CLOUDFLARE_STREAM_CUSTOMER_SUBDOMAIN=customer-your-subdomain

# Sentry Error Tracking
SENTRY_DSN=https://your-key@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-key@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-auth-token-here
SENTRY_ORG=your-org-name
SENTRY_PROJECT=your-project-name

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Optional: Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Optional: Feature Flags
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ADS=true

# Rate Limiting
RATE_LIMIT_CHAT_MESSAGES=10
RATE_LIMIT_WINDOW_MS=60000

# Video Settings
MAX_VIDEO_UPLOAD_SIZE_MB=500
SUPPORTED_VIDEO_FORMATS=mp4,mov,avi,webm
DEFAULT_THUMBNAIL_WIDTH=1280
DEFAULT_THUMBNAIL_HEIGHT=720

# Cache Settings
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=300

# Development Only
NEXT_PUBLIC_DEV_MODE=true
SKIP_AUTH_CHECK=false
MOCK_VIDEO_UPLOADS=false